<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticateFilter</filter-name>
        <filter-class>filters.AuthenticateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <param-name>Storage</param-name>
        <param-value>E:\Semester 4\PRJ321 (Web-Based Java Applications)\Java Code\PRJ_Project\web\fileManager\</param-value>
    </context-param>
    <context-param>
        <param-name>admin</param-name>
        <param-value>6dm1n</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>1234</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>FileDownloadManager</servlet-name>
        <servlet-class>controllers.FileDownloadManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controllers.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownloadManager</servlet-name>
        <url-pattern>/FileDownloadManager/*</url-pattern>
    </servlet-mapping>
</web-app>
